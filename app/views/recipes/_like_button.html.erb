<%= button_to like_recipe_path(recipe),
              method: :post,
              data: { turbo_stream: true },
              id: "like_button_#{recipe.id}",
              class: "btn position-relative p-0 me-2" do %>
  <i class="fa-solid fa-thumbs-up <%= current_user.voted_up_on?(recipe) ? 'text-primary' : 'text-cWhite' %>" ></i>
<% end %>
