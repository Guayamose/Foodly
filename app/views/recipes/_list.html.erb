<% if recipes.any? %>
  <div class="d-flex pt-2" style="overflow-y:auto;">
    <% recipes.each_with_index do |recipe, index| %>
      <div class="text-cWhite mb-1 mt-2 p-2">
        <%= link_to  scan_recipe_path(recipe.scan_id, recipe), class: "text-decoration-none" do  %>
          <div class="card-recipe flex-column position-relative px-2">
            <%= image_tag "https://images.unsplash.com/photo-1618666185561-baed3459ff18?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", class: "card-image rounded-circle" %>
            <div class="text-cWhite text-center fs-6">
              <p class="my-1"><%= recipe.name %></p>
              <div>
                <span class="duration-font">
                  <i class="fa-regular fa-clock"></i>
                  <%= recipe.duration %>
                  min
                </span>
              </div>
            </div>
            <div class="fs-6 favorite-style">
              <% if recipe.favorited_by?(current_user) %>
                <i class="fa-solid fa-bookmark fa-lg mb-2"></i>
              <% end %>
            </div>
            <% if recipe.get_likes.size > 0 %>
              <div class="like-style fs-6">
                <i class="fa-solid fa-heart fa-lg" >
                  <span class="badge text-cWhite p-0">
                    <%= recipe.get_likes.size %>
                  </span>
                </i>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <em class="text-cWhite">Sorry, no recipes found.</em>
<% end %>
