<div class="banner banner-overlay">
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
      <span class="badge text-bg-cSeaGreen mt-3 p-2 rounded-pill">
        <i class="fa-regular fa-clock"></i>
        <%= @recipe.duration %>
        Minutes
      </span>
    </div>
    <div class="col-12">
      <h3 class="text-cWhite mt-3"><%= @recipe.name %></h3>
    </div>
    <div class="col-6">
      <p class="text-cWhite text-start"><%= @recipe.cuisine%></p>
    </div>
    <div class="col-6">
      <p class="text-cWhite text-end"><%= @recipe.diet %></p>
    </div>
    <div class="col-12">
      <p class="text-cWhite"><%= @recipe.directions %></p>
    </div>
  </div>
</div>
