<%= button_to toggle_favorite_recipe_path(recipe),
              method: :post,
              data: { turbo_stream: true },
              id: "favorite_button_#{recipe.id}",
              class: "btn position-relative p-0" do %>
  <i class="fa-heart text-cWhite <%= current_user.favorited?(recipe) ? 'fa-solid' : 'fa-regular' %>"></i>
<% end %>
