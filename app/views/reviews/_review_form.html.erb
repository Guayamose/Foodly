<div class="new-review-form mt-3">
  <%= simple_form_for(review, url: recipe_reviews_path(recipe)) do |f| %>
    <%= f.collection_radio_buttons :rating, [[1], [2], [3], [4], [5], ], :first, :last, item_wrapper_tag: false, boolean_style: :inline do |b| %>
      <%= b.radio_button + b.label %>
    <% end %>
    <%= f.input :comment %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Add Review", class: "btn btn-cYellow w-100" %>
  <% end %>
</div>
