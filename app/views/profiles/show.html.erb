<div class="container">
  <div class="row mt-3">
    <%= simple_form_for @user, url: profile_path, method: :patch do |f| %>
      <%= f.input :username, label_html: { class: 'text-cWhite' } %>
      <%= f.input :allergy, label_html: { class: 'text-cWhite' } %>
      <%= f.input :preference, label_html: { class: 'text-cWhite' } %>
      <%= f.submit class: "btn btn-cDarkYellow w-100" %>
    <% end %>
  </div>
</div>
