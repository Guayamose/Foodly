<div class="scan-header m-3 my-4">
  <h1>Here are your recipes!</h1>
</div>
<h5 class="scan-header m-3">Favorite the ones you like for later</h5>

<div class="container my-5">
  <section class="fd-grid" aria-label="Recipes">
    <div class="row g-2 mt-4 row-cols-2">
    <% @scan.recipes.each_with_index do |recipe, index| %>
      <div class="col show-card mb-1 <%= index.even? ? "pe-2" : "ps-2" %>">
          <%= link_to scan_recipe_path(recipe.scan_id, recipe),
            class: "text-decoration-none" do %>
          <div>
            <div>
              <%= image_tag "https://images.unsplash.com/photo-1618666185561-baed3459ff18?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
                class: "show-card-image rounded-circle" %>
            </div>
            <div class="show-card-recipe flex-column p-1">
              <div class="show-recipe-text text-center fs-6">
                <p><%= recipe.name %></p>
                <span class="scan-recipe-duration">
                  <i class="fa-regular fa-clock"></i>
                  <%= recipe.duration %> Min
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </section>
</div>
